logging {
  level  = "info"
  format = "logfmt"
}

loki.write "default" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}

local.file_match "spring_logs" {
  path_targets = [
    {
      path = "/app/log/app-*.log",
    },
    {
      path = "/app/log/audit-*.log",
    }
  ]

  forward_to = [loki.write.default.receiver]
}

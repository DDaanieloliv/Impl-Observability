logging {
  level  = "info"
  format = "logfmt"
}

loki.write "default" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}

local.file_match "spring_logs" {
  path_targets = [
    {
      path = "/var/log/myapp/app-*.log"
    },
    {
      path = "/var/log/myapp/audit-*.log"
    }
  ]
}

local.file_logging "send_to_loki" {
  inputs     = [local.file_match.spring_logs.outputs]
  forward_to = [loki.write.default.receiver]
}
